
AB_ROVERSION=2
AB_INSTALL=yes

AB_CONFLAGS='--disable-rtcd --disable-asm --enable-fixed-point --disable-intrinsics'
autoreconf -fi

ab_package() {
  ab_create_app LibOpus Apps/Library libopus-dev

  HERE=`pwd`
  cd $A

  unzip $AB_OUTPUTLIB/$RO_PKG.zip

  mv include/opus opus
  rm -rf include

  mv lib/*.a .
  rm -rf lib

  cd doc
  docdir=`echo *`
  mv $docdir/* .
  rm -rf $docdir

  cd $HERE

  # Copy HTML documentation
  cp -r $S/doc $A

  $AB_HOME/add-riscpkg -unixlib -name LibOpus-Dev -copyrightfile COPYING
}
