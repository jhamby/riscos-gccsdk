AB_INSTALL=yes
AB_ROVERSION=2

ab_package() {
  ab_create_app LibOGG Apps/Library libogg-dev

  HERE=`pwd`

  cd $A

  unzip $AB_OUTPUTLIB/$RO_PKG.zip

  mv include/ogg ogg
  rm -rf include

  mv lib/*.a .
  rm -rf lib

  cd doc
  docdir=`echo *`
  mv $docdir/* .
  rm -rf $docdir

  cd $HERE

  # Copy HTML documentation
  cp -r $S/doc $A

  $AB_HOME/add-riscpkg -name LibOGG-Dev -unixlib -unixsound -copyrightfile $S/COPYING

  if [ "$RO_SHAREDLIBS" == "yes" ] ; then
     ab_create_sharedlib_skeleton libogg
     ab_add_sharedlib $S/src/.libs libogg.so.0
     
     $AB_HOME/add-riscpkg -package libogg -name LibOgg -depends SharedLibs \
		-section Library -copyrightfile $H/Copyright
  fi
}
