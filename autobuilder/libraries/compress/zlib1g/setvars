AB_INSTALL=yes

ab_package() {
  ab_create_app ZLib1g Apps/Library zlib1g-dev

  cp README $A\!Help

  HERE=`pwd`
  cd $A

  unzip $AB_OUTPUTLIB/$RO_PKG.zip  

  mv include/* .
  rm -rf include

  mv lib/*.a .
  rm -rf lib

  rm -rf doc

  cd $HERE

  cp -r examples $A/doc
  cp ChangeLog FAQ $A/doc

  $AB_HOME/add-riscpkg -package zlib1g-dev -unixlib
}
