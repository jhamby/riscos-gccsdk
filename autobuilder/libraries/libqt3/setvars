
AB_PRECONF=:

cp -rf $AB_HOME/$AB_PACKAGEDIR/riscos-g++ mkspecs

export QTDIR=$PWD

#make -f Makefile.cvs

YACC='byacc -d'

echo "yes" | ./configure -prefix "/home/riscos/env" -docdir "/home/riscos/env/share/doc/qt3-doc" -headerdir "/home/riscos/env/qt" \
           -datadir "/home/riscos/env/share/qt" -qt-gif -system-zlib -system-libpng -system-libjpeg -system-libmng \
           -qt-imgfmt-jpeg -qt-imgfmt-png -qt-imgfmt-mng -I/home/riscos/env/include \
           -plugin-sql-psql -plugin-style-windows -plugin-style-compact -plugin-style-platinum -plugin-style-sgi \
           -plugin-style-cde -stl -no-g++-exceptions -platform riscos-g++ $@

make -C src/moc


AB_MAKE="$AB_MAKE sub-tools"
