AB_CATEGORY=Library
AB_ZIPNAME=libsdl-ttf2.0-dev
AB_INSTALL=yes

./autogen.sh

mkdir -p $D/include/SDL/

ab_package()
{
  AD=$D/Apps/Library/!SDLTTF
  mkdir -p $AD
  cp $H/\!SDLTTF/\!* $AD

  HERE=`pwd`
  cd $AD

  unzip $AB_OUTPUTLIB/$AB_ZIPNAME-$AB_PVERSION.zip

  mv include/SDL SDL
  rm -rf include

  mv lib/o o
  rm -rf lib

  cd doc
  docdir=`echo *`
  mv $docdir/* .
  rm -rf $docdir

  cp README ../\!Help,feb

  cd $HERE

  $AB_HOME/add-riscpkg -package $AB_ZIPNAME -unixlib \
    -depends "libfreetype6-dev" \
    -depends "libsdl1.2-dev"
}

