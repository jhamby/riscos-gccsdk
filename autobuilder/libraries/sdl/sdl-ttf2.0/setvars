AB_INSTALL=yes

./autogen.sh

ab_package() {
  ab_create_app SDLTTD Apps/Library libsdl-ttf2.0-dev

  HERE=`pwd`
  cd $A

  unzip $AB_OUTPUTLIB/$RO_PKG.zip

  mv include/SDL SDL
  rm -rf include

  mv lib/*.a .
  rm -rf lib

  cd doc
  docdir=`echo *`
  mv $docdir/* .
  rm -rf $docdir

  cp README ../\!Help,feb

  cd $HERE

  $AB_HOME/add-riscpkg -unixlib -name LibSDLTTF2.0-Dev \
    -depends "LibFreetype6-Dev" \
    -depends "LibSDL1.2-Dev"
}

