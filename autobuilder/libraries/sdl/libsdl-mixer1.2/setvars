AB_ZIPNAME=libsdl-mixer1.2-dev

AB_INSTALL=yes
AB_ROVERSION=2


# Use internal mikmod modules, disable smpeg as we don't build it
AB_CONFLAGS="--disable-music-libmikmod --disable-music-mp3 --enable-music-ogg-tremor --disable-music-ogg-shared --disable-music-midi"

ab_package()
{
  ab_create_app SDLMixer Apps/Library

  cd $A

  unzip $AB_OUTPUTLIB/$RO_PKG.zip

  mv include/SDL SDL
  rm -rf include

  mv lib/*.a .
  rm -rf lib

  cd doc
  docdir=`echo *`
  mv $docdir/* .
  rm -rf $docdir

  cp README ../\!Help,feb

  cd $HERE

  cp $S/playwave.c $A/doc
  cp $S/playmus.c $A/doc

  $AB_HOME/add-riscpkg -package $AB_ZIPNAME -unixlib \
    -depends "tremor-dev" -depends "libsdl1.2-dev"
}

