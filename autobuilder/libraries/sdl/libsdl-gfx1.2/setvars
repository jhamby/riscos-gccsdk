AB_INSTALL=yes
AB_CONFLAGS=--disable-mmx

ab_package() {
  ab_create_app SDLGFX Apps/Library libsdl-gfx1.2-dev

  HERE=`pwd`
  cd $A

  unzip $AB_OUTPUTLIB/$RO_PKG.zip

  mv include/SDL SDL
  rm -rf include

  mv lib/*.a .
  rm -rf lib

  cd doc
  docdir=`echo *`
  mv $docdir/* .
  rm -rf $docdir

  cp README ../\!Help,feb

  cd $HERE

  $AB_HOME/add-riscpkg -unixlib -name LibSDLGFX1.2-Dev \
    -depends "LibSDL1.2-Dev"
}
