AB_CATEGORY=Library
AB_ZIPNAME=libxml2-dev

AB_INSTALL=yes

AB_CONFLAGS="--enable-ipv6=no --with-python=no"

ab_package()
{
  AD=$D/Apps/Library/!LibXML2
  mkdir -p $AD
  cp $H/\!LibXML2/\!* $AD

  HERE=`pwd`
  cd $AD

  unzip $AB_OUTPUTLIB/$RO_PKG.zip

  mv include/libxml2 .
  rm -rf include

  mv lib/*.a .
  rm -rf lib

  cd doc
  docdir=`echo *`
  mv $docdir/* .
  rm -rf $docdir

  cp README ../\!Help,feb

  cd $HERE

  $AB_HOME/add-riscpkg -package $AB_ZIPNAME -unixlib
}



