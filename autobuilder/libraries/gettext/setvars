AB_LICENSE="Free"

if [ "$RO_SHAREDLIBS" == "yes" ] ; then
AB_PACKAGES="libgettext-dev libintl"
else
AB_PACKAGES="libgettext-dev"
fi

cd gettext-runtime

AB_INSTALL=yes

if [ ! -d man/man3 ] ; then
  ln -s ../man man/man3
fi

AB_CONFLAGS="--with-included-gettext --enable-nls --disable-java --disable-native-java"

ab_package()
{

  rm -f man/man3

  ab_create_app LibGetText Apps/Library libgettext-dev


  HERE=`pwd`
  cd $A

  unzip $AB_OUTPUTLIB/$RO_PKG.zip

  mv include/h h
  rm -rf include

  # Move static libs to correct place in static package
  mv lib/*.a .
  rm -rf lib

  cd doc
  docdir=`echo *`
  mv $docdir/* .
  rm -rf $docdir

  cd ../man
  find . -maxdepth 1 -type f -execdir mv {} {},faf \;


  cd $HERE

  $AB_HOME/add-riscpkg -name LibGetText-Dev -package libgettext-dev -unixlib \
       -copyrightfile $S/COPYING

  if [ "$RO_SHAREDLIBS" == "yes" ]; then
    ab_create_sharedlib_skeleton libintl
    ab_add_sharedlib $S/intl/.libs libintl.so.8

    $AB_HOME/add-riscpkg -package libintl -unixlib -name LibIntl \
       -copyrightfile $S/COPYING -depends SharedLibs-C2
  fi
}

