
AB_URL=http://download.qt.io/official_releases/qt/5.4/5.4.1/submodules/qtxmlpatterns-opensource-src-5.4.1.tar.xz

AB_INSTALL=env

ab_make() {
  $GCCSDK_INSTALL_ENV/bin/qmake -r
  $AB_MAKE
}

ab_package() {
  ab_create_sharedlib_skeleton Qt5XmlPatterns

  ab_add_sharedlib $S/lib libQt5XmlPatterns.so.5

  AB_COMPONENTS=""
  $AB_HOME/add-riscpkg -package Qt5XmlPatterns -name Qt5XmlPatterns \
	-depends SharedLibs -depends Qt5XmlPatterns
}
