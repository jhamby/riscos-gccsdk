



AB_CONFLAGS="--disable-nls --ro-recurse"
AB_INSTALL=yes

# Build gen_art_config first

AB_MAKE="/usr/bin/cc -O2 -Wall libart_lgpl/gen_art_config.c -o libart_lgpl/gen_art_config; \
         make -C tools/convertrgb loadpng.o convertrgb.o; \
         /usr/bin/cc -lglib -lpng1.0 -o tools/convertrgb/convertrgb tools/convertrgb/*.o; \
         touch tools/convertrgb/convertrgb,ff8; \
         $AB_MAKE"
