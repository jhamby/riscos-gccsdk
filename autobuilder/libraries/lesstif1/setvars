AB_CONFLAGS="--disable-build-tests --enable-build-12 --disable-build-20 --enable-build-21 --enable-production"

#AB_INSTALL=yes

cd test
$AB_CONFIG $AB_CONFLAGS
cd ..

cc scripts/man2html.c -o scripts/man2html

mkdir -p /home/riscos/env/include/Xm
mkdir -p /home/riscos/env/include/Mrm


AB_MAKE="$AB_MAKE; cp include/Motif-2.1/Xm/*.h /home/riscos/env/include/Xm; \
         cp include/Motif-2.1/Mrm/*.h /home/riscos/env/include/Mrm; \
         cp lib/Xm/.libs/libXm.a lib/Xm/.libs/libXm.la  \
            lib/Mrm/.libs/libMrm.a lib/Mrm/.libs/libMrm.la \
            /home/riscos/env/lib"