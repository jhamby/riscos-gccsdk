if [ "$RO_SHAREDLIBS" == "yes" ] ; then
AB_PACKAGES="libffi6 libffi6-dev"
else
AB_PACKAGES="libffi6-dev"
fi
AB_LICENSE=Free

AB_INSTALL=yes

ab_package() {

  if [ "$RO_SHAREDLIBS" == "yes" ] ; then

  # Shared libraries package
  slibdir=$D/libffi6/Resources/\!SharedLibs/lib
  mkdir -p $slibdir
  
  fi

  # Developer package
  ab_create_app LibFFI6 Apps/Library libffi6-dev

  HERE=`pwd`
  cd $A
  unzip $AB_OUTPUTLIB/$RO_PKG.zip

  # Move headers libs and docs up one directory
  mv include/* .
  rm -rf include

  if [ "$RO_SHAREDLIBS" == "yes" ] ; then
    # Copy shared libs to shared libs package
    mv lib/*.so.* $slibdir
  fi

  # Copy static libs to dev package
  mv lib/*.a .
  rm -rf lib

  cd doc
  tdocdir=`echo libffi6*`
  mv $tdocdir/* .
  rm -rf $tdocdir

  if [ "$RO_SHAREDLIBS" == "yes" ] ; then
    cd $slibdir

    # Create soft links
    SLIBS=`find . -iname "*\.so\.*" -printf "%f\n"`
    for SLIB in $SLIBS ; do
      ROSLIB=`echo $SLIB | sed -e "s#\.#/#g"`
      LNAME=`echo $SLIB | cut -d '.' -f 1-3`
      $GCCSDK_INSTALL_CROSSBIN/arm-unknown-riscos-ln -s $ROSLIB $LNAME,1c8
      LNAME=`echo $SLIB | cut -d '.' -f 1-4`
      $GCCSDK_INSTALL_CROSSBIN/arm-unknown-riscos-ln -s $ROSLIB $LNAME,1c8
    done

    cd $HERE
  
  $AB_HOME/add-riscpkg -package "LibFFI6" \
    -depends SharedLibs \
    -copyrightfile COPYING
    
  fi
  
  $AB_HOME/add-riscpkg -package "LibFFI6-Dev" \
    -unixlib \
    -copyrightfile COPYING
}

