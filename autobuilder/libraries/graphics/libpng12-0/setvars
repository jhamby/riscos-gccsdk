AB_CATEGORY=Library
AB_ZIPNAME=libpng12-dev

AB_INSTALL=yes

export ECHO=echo

ab_make()
{
  if [ "$AB_ELFBUILD" != "yes" ] ; then
    # GCCSDK 3.4.6 support
    cp scripts/makefile.gcc Makefile
  else
    rm -f libtool
    ln -s $(which libtool)
  fi
  $AB_MAKE
}

ab_package()
{
  AD=$D/Apps/Library/!LibPNG
  mkdir -p $AD
  cp $H/\!LibPNG/\!* $AD

  cat $S/libpng-1.2.27.txt >> $AD/\!Help,fff

  HERE=`pwd`
  cd $AD

  unzip $AB_OUTPUTLIB/$RO_PKG.zip

  mv include/libpng12 libpng12
  rm -rf include

  mv lib/*.a .
  rm -rf lib

  cd doc
  docdir=`echo *`
  mv $docdir/* .
  rm -rf $docdir

  rm -rf bin

  cd $HERE

  # Downloaded version can include a character that is invalid
  # for a riscpkg version number so replace it
  AB_PVERSION=`echo "$AB_PVERSION" | sed "s/~/-/"`

  $AB_HOME/add-riscpkg -package $AB_ZIPNAME -unixlib \
    -depends "zlib1g-dev"
}
