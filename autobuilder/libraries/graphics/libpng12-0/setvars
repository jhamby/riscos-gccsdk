AB_CATEGORY=Library
AB_ZIPNAME=libpng12-dev
#AB_URL=ftp://ftp.simplesystems.org/pub/png/src/libpng-1.2.26.tar.bz2

AB_INSTALL=yes

export ECHO=echo

ab_make()
{
  rm -f libtool
  ln -s $(which libtool)
}

ab_package()
{
  AD=$D/Apps/Library/!LibPNG
  mkdir -p $AD
  cp $H/\!LibPNG/\!* $AD

  cat $S/libpng-1.2.27.txt >> $AD/\!Help,fff

  HERE=`pwd`
  cd $AD

  unzip $AB_OUTPUTLIB/$RO_PKG.zip

  mv include/libpng12 libpng12
  rm -rf include

  mv lib/o o
  rm -rf lib

  cp o/libpng12 o/libpng 

  cd doc
  docdir=`echo *`
  mv $docdir/* .
  rm -rf $docdir

  rm -rf bin

  cd $HERE

  # Downloaded version can include a character that is invalid
  # for a riscpkg version number so replace it
  AB_PVERSION=`echo "$AB_PVERSION" | sed "s/~/-/"`

  $AB_HOME/add-riscpkg -package $AB_ZIPNAME -unixlib \
    -depends "zlib1g-dev"

}
