AB_PACKAGES="libjpeg-progs libjpeg62-dev"
AB_CATEGORY=Graphics

AB_INSTALL=yes
AB_INSTALLTARGET=install-lib 

AB_MANPAGE="cjpeg.1 djpeg.1 jpegtran.1 rdjpgcom.1 wrjpgcom.1"

ab_package() {
  
  HERE=`pwd`

  # Package programs
  PD=$D/libjpeg-progs/Apps/Graphics/\!JPEGProgs
  mkdir -p $PD

  cp $H/\!JPEGProgs/\!* $PD
  cp $S/*$AB_EXEEXT $PD
  cp $S/usage.doc $PD/\!Help
  cp $S/usage.doc wizard.doc $PD
  cp $S/README $PD

  for AB_PAGE in $AB_MANPAGE ; do
    rman -f HTML $S/$AB_PAGE > $PD/$AB_PAGE,faf
  done

  cd $HERE
  $AB_HOME/add-riscpkg -package libjpeg-progs -unixlib

  # Package libraries
  AD=$D/libjpeg62-dev/Apps/Library/\!LibJPEG
  mkdir -p $AD
  cp -av $H/\!LibJPEG/\!* $AD

  cd $AD

  unzip $AB_OUTPUTLIB/$RO_PKG.zip

  #mv include/h h
  rm -rf include

  #mv lib/o o
  rm -rf lib

  mv doc/libjpeg62-$AB_PVERSION/* doc
  rm -rf doc/libjpeg62-$AB_PVERSION

  # Add some documentation
  mkdir -p $AD/doc
  mkdir -p $AD/doc/c
  cp $S/example.c $AD/doc/c/example
  cp $S/libjpeg.doc $AD/\!Help
  cp $S/libjpeg.doc $S/README $AD/doc

  cd $HERE
  $AB_HOME/add-riscpkg -package libjpeg62-dev -section Library -unixlib

  cd $HERE
}
