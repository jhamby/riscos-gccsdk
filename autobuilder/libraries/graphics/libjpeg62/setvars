AB_PACKAGES="libjpeg-progs libjpeg62-dev"
AB_CATEGORY=Library

AB_INSTALL=yes
AB_INSTALLTARGET=install-lib 

AB_MANPAGE="cjpeg.1 djpeg.1 jpegtran.1 rdjpgcom.1 wrjpgcom.1"



ab_package() {
  # Package programs
  ab_create_app JPEGProgs Apps/Graphics

  cp $S/*$AB_EXEEXT $A
  cp $S/usage.doc $A/\!Help
  cp $S/usage.doc wizard.doc $A/
  cp $S/README $A/

  for AB_PAGE in $AB_MANPAGE ; do
    rman -f HTML $S/$AB_PAGE > $A/$AB_PAGE,faf
  done

  $AB_HOME/add-riscpkg -package libjpeg-progs -unixlib
  rm -rf $A

  # Package libraries
  ab_create_app LibJPEG Apps/Library

  HERE=`pwd`
  cd $A
  unzip $AB_OUTPUTLIB/$RO_PKG.zip

  mv include/h h
  rm -rf include

  mv lib/*.a .
  rm -rf lib

  mv doc/$RO_PKG/* doc
  rm -rf doc/$RO_PKG

  # Add some documentation
  mkdir -p $A/doc/c
  cp $S/example.c $A/doc/c/example
  cp $S/libjpeg.doc $A/\!Help
  cp $S/libjpeg.doc $S/README $A/doc

  $AB_HOME/add-riscpkg -package libjpeg62-dev -section Library -unixlib

  cd $HERE
}
