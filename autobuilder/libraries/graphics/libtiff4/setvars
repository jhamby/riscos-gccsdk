AB_CATEGORY=Library
AB_ZIPNAME=libtiff4-dev
AB_INSTALL=yes
AB_INSTALLTARGET="-C libtiff install"

AB_PRECONF='CFLAGS=-O3'

ab_package()
{
  AD=$D/Apps/Library/!LibTIFF
  mkdir -p $AD
  cp $H/\!LibTIFF/\!* $AD
  cp COPYRIGHT VERSION RELEASE-DATE $AD
  cp README $AD/\!Help
  cp -r html $AD

  HERE=`pwd`
  cd $AD

  unzip $AB_OUTPUTLIB/$RO_PKG.zip

  mv include/* .
  rm -rf include

  mv lib/*.a .
  rm -rf lib

  rm -rf doc

  cd $HERE

  $AB_HOME/add-riscpkg -package $AB_ZIPNAME -unixlib \
     -depends zlib1g-dev
}

