AB_ZIPNAME=libtiff4-dev
AB_INSTALL=yes
AB_INSTALLTARGET="-C libtiff install"



ab_package()
{
  ab_create_app LibTIFF Apps/Library

  cp COPYRIGHT VERSION RELEASE-DATE $A
  cp README $A/\!Help
  cp -r html $A

  HERE=`pwd`
  cd $A

  unzip $AB_OUTPUTLIB/$RO_PKG.zip

  mv include/* .
  rm -rf include

  mv lib/*.a .
  rm -rf lib

  rm -rf doc

  cd $HERE

  $AB_HOME/add-riscpkg -package $AB_ZIPNAME -unixlib \
     -depends zlib1g-dev
}

