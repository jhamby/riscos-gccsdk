AB_INSTALL=yes

cp $S/makefiles/makefile.unix $S/Makefile

ab_package() {
  ab_create_app LibMNG Apps/Library libmng-dev

  HERE=`pwd`
  cd $A

  unzip $AB_OUTPUTLIB/$RO_PKG.zip
  
  mv include/h h
  rm -rf include

  mv lib/*.a .
  rm -rf lib

  mv doc/$RO_PKG/* doc
  rm -rf doc/$RO_PKG

  cd $HERE

  $AB_HOME/add-riscpkg -unixlib -name LibMNG-Dev -copyrightfile LICENSE
}
