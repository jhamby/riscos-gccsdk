#!/bin/bash -e

base=$(dirname $0)

if [ "$1" == "-l" ] ; then
  list=true
  shift
else
  list=false
fi

if [ "$1" == "-a" ] ; then
  all=true
  shift
else
  all=false
fi

if [ "$1" == "-o" ] ; then
  opt=true
  shift
else
  opt=false
fi



subdir=$1

if [ -z "$subdir" ] ; then
  subdir=libraries
fi

function getnext() {
  local lib
  local name

  for lib in $(find $base/$subdir -type d) ; do
    if [ -e $lib/setvars ] ; then
      name=$(sed s#$base/## <<< $lib)

      if [ -e $lib/last-success ] ; then
        if $opt; then
          if grep -E -q "desklib|oslib" <<< $name ; then
            continue
          fi

          out=$(grep -E -- "-gcc|-g\+\+" $lib/last-success | grep -- -o | grep -v libtool | grep -v checking | grep -v -- -O2 | grep -v -- -O3 | grep -v -- -Os | \
              grep -v "\.so" | grep -v "unrecognized option" || true)
          if [ -n "$out" ] ; then
            echo "$name: $out"
          fi
        fi
      elif ! $opt; then

        if $list; then
          if [ -e $lib/last-depends ] ; then
            echo "$name: $(cat $lib/last-depends)"
          elif [ -e $lib/last-failure ] ; then
            echo "$name: (failed)"
          else
            echo "$name: (not attempted)"
          fi
        else
          if $all && [ -e $lib/last-failure ] ; then
            continue
          fi

          basename $lib
          return 0
        fi
      fi
    fi
  done
}


if $list || $opt; then
  getnext
  exit 0
fi


lib=$(getnext)

while [ -n "$lib" ] ; do

  $base/build -v $lib

  lib=$(getnext)
done

echo "All libraries built"

