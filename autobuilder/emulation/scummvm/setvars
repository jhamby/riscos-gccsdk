AB_CVS_ROOT=:pserver:anonymous:@cvs.sf.net:/cvsroot/scummvm
AB_CVS_MODULE=scummvm
AB_ZIPNAME=scummvm-cvs-$(date +%Y%m%d)

AB_CATEGORY=emulation

AB_CONFLAGS="--with-sdl-prefix=/home/riscos/env/bin --enable-release"

ab_package() {
  cp -av $H/\!ScummVM $D

  mkdir -p $D/\!ScummVM/Docs
  cp "$H/RISC OS" $S/README $S/COPYING $D/\!ScummVM/Docs

  cp $S/scummvm$AB_EXEEXT $D/\!ScummVM
}
