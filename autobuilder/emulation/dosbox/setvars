
# AB_MANPAGE=docs/dosbox.1
AB_CONFLAGS="--disable-opengl"

ab_package() {
  ab_create_command_app DosBox Apps/Emulation

  cp -av $S/AUTHORS $S/COPYING $S/INSTALL $S/NEWS $S/THANKS $S/src/dosbox$AB_EXEEXT \
         $A
  cp -av $S/README $A/\!Help

  $AB_HOME/add-riscpkg -unixlib -unixsound -unixhome \
    -appdir Apps.Emulation -appname DosBox -dirvar
}
