
AB_CATEGORY=Graphics

ab_package() {
  cp -av $H/\!Tgif/ $D
  mkdir -p $D/\!Tgif/Docs
  cp -av $S/tgif$AB_EXEEXT $D/\!Tgif/
  cp -av -L $S/Copyright $S/License $S/README $D/\!Tgif/Docs

  mkdir -p $D/\!Tgif/data
  cp -av $S/tgificon.xpm $D/\!Tgif/data

  rman -f HTML $S/tgif.man > $D/\!Tgif/Docs/tgif.html
}
