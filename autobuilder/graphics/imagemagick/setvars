
AB_CATEGORY=Graphics

AB_MANPAGE=utilities/ImageMagick.1

AB_CONFLAGS="--with-perl=no --disable-largefile"

ab_package() {
 AD=$D/Apps/Graphics/\!ImageMagick
 mkdir -p $AD
 cp $H/\!ImageMagick/\!* $AD
 cp -av $S/utilities/*$AB_EXEEXT $AD
 cp -av $S/README.txt $AD/\!Help
 cp -av $S/AUTHORS $S/LICENSE $S/NEWS $AD
 cp -av config $AD/

 for program in $AD/*$AB_EXEEXT; do 
   name=$(sed -e s#$AB_EXEEXT##  <<<$program)
   echo "Set Alias$$$name <ImageMagick$Dir>.$name %%*0" >> $AD/\!Run
 done

 $AB_HOME/add-riscpkg -unixlib
}

