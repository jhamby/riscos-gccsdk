
mv Imakefile Imakefile.old

ab_package() {
  ab_create_app Xconq Apps/Games
  ab_makerun x11/xconq

  mkdir $A/data

  cp -av images $A/data
  cp -av tcltk/*.tcl $A/data
  cp -av lib $A/data

  cp -av $GCCSDK_INSTALL_ENV/lib/tcl8.4 $A/
  cp -av $GCCSDK_INSTALL_ENV/lib/tk8.4 $A/
  
  $AB_HOME/add-riscpkg -unixlib 
}
