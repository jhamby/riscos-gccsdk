AB_CATEGORY=Games
AB_COPYSOURCE=yes

ab_package() {
  AD=$D/Apps/Games
  mkdir -p $AD
  cp -av $H/\!TuxMath $AD
  cp -av $H/\!TuxMath/\!* $AD/\!TuxMath
  cp -av src/tuxmath$AB_EXEEXT $AD/\!TuxMath/tuxmath$AB_EXEEXT
  cat doc/README.txt $H/RISCOSNotes >$AD/\!TuxMath/\!Help

  cp -r doc $AD/\!TuxMath

  mkdir -p $AD/\!TuxMath/data
  mkdir -p $AD/\!TuxMath/data/tuxmath
  cp -r data/* $AD/\!TuxMath/data/tuxmath

  $AB_HOME/add-riscpkg -unixlib -unixsound -unixhome \
  -depends ttf-sil-andika
}

export LIBS="-ljpeg -lpng -ltiff -lz -lvorbisidec -logg -lfreetype"
AB_CONFLAGS=\''--datadir=/\<TuxMath\$$Dir\>/data'\'
AB_CONFLAGS="$AB_CONFLAGS --without-sdlpango"
