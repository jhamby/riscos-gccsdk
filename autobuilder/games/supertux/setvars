AB_CATEGORY=Games
AB_COPYSOURCE=yes

ab_package() {
  AD=$D/Apps/Games
  mkdir -p $AD
  cp -av $H/\!SuperTux $AD
  cp -av $H/\!SuperTux/\!* $AD/\!SuperTux
  cp -av src/supertux$AB_EXEEXT $AD/\!SuperTux/supertux$AB_EXEEXT

  cp -av AUTHORS ChangeLog COPYING LEVELDESIGN NEWS README \
    $AD/\!SuperTux

  mkdir -p $AD/\!SuperTux/data
  mkdir -p $AD/\!SuperTux/data/supertux
  cp -r data/* $AD/\!SuperTux/data/supertux

  $AB_HOME/add-riscpkg -unixlib -unixsound -unixhome
}

export LIBS="-ljpeg -lpng -ltiff -lz  -logg -lvorbis -lvorbisfile"
AB_CONFLAGS=\''--datadir=/<SuperTux$$Dir>/data'\'

