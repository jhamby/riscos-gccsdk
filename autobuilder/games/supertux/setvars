AB_CATEGORY=games
AB_COPYSOURCE=yes

ab_package() {
  cp -av $H/\!SuperTux $D
  cp -av $H/\!SuperTux/\!* $D/\!SuperTux
  cp -av src/supertux,ff8 $D/\!SuperTux/supertux,ff8

  cp -av AUTHORS ChangeLog COPYING LEVELDESIGN NEWS README \
    $D/\!SuperTux

  mkdir -p $D/\!SuperTux/data
  mkdir -p $D/\!SuperTux/data/supertux
  cp -r data/* $D/\!SuperTux/data/supertux
}

export LIBS="-ljpeg -lpng -ltiff -lz  -logg -lvorbis -lvorbisfile"
AB_CONFLAGS=\''--datadir=/\<SuperTux\$$Dir\>/data'\'



