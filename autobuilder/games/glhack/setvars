AB_URL=http://kent.dl.sourceforge.net/sourceforge/glhack/glhack-1.2.tar.gz

ab_package() {
  ab_create_app GLHack Apps/Games

  mkdir -p $A/Docs
  mkdir -p $A/locks
  mkdir -p $A/usr
  mkdir -p $A/var/save

  cp $S/src/glhack$AB_EXEEXT $A/usr
  cp $S/dat/*.png $A/usr
  cp $S/dat/glface*.lst $A/usr
  cp $S/dat/license $A/usr
  cp $S/dat/nhdat $A/usr
  cp $S/CHANGELOG.GL $S/NEWS.GL $S/README* $A/Docs

  rman -f HTML $S/doc/glhack.6 > $A/Docs/glhack.html,faf
 
  $AB_HOME/add-riscpkg -unixlib
}



