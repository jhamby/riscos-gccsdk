AB_CATEGORY=games
AB_COPYSOURCE=yes

ab_package() {
  cp -av $H/\!Toppler $D
  cp -av $H/\!Toppler/\!* $D/\!Toppler
  cp -av toppler,ff8 $D/\!Toppler/!RunImage,ff8

  cp -av AUTHORS ChangeLog COPYING NEWS README \
    $D/\!Toppler

  mkdir -p $D/\!Toppler/data
  mkdir -p $D/\!Toppler/data/toppler
  cp -av toppler.dat $D/\!Toppler/data/toppler
  cp -av *.ttm $D/\!Toppler/data/toppler
  cp -av levelnames.txt $D/\!Toppler/data/toppler
}

export LIBS="-logg -lvorbis -lvorbisfile"
AB_CONFLAGS=\''--datadir=/\<Toppler\$$Dir\>/data'\'
