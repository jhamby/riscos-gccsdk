AB_CATEGORY=Games
AB_COPYSOURCE=yes

ab_package() {
  AD=$D/Apps/Games
  mkdir -p $AD
  cp -av $H/\!Toppler $AD
  cp -av $H/\!Toppler/\!* $AD/\!Toppler
  cp -av toppler$AB_EXEEXT $AD/\!Toppler/!RunImage$AB_EXEEXT

  cp -av AUTHORS ChangeLog COPYING NEWS README \
    $AD/\!Toppler

  mkdir -p $AD/\!Toppler/data
  mkdir -p $AD/\!Toppler/data/toppler
  cp -av toppler.dat $AD/\!Toppler/data/toppler
  cp -av *.ttm $AD/\!Toppler/data/toppler
  cp -av levelnames.txt $AD/\!Toppler/data/toppler

  $AB_HOME/add-riscpkg -unixhome -unixsound -unixhome
}

export LIBS="-logg -lvorbis -lvorbisfile"
AB_CONFLAGS=\''--datadir=/\<Toppler\$$Dir\>/data'\'
