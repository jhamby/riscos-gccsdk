AB_CATEGORY=Games
AB_COPYSOURCE=yes

ab_package() {
  mkdir -p $D/Apps
  AD=$D/Apps/Games
  mkdir -p $AD
  cp -av $H/\!CircusLnx $AD
  cp -av $H/\!CircusLnx/\!* $AD/\!CircusLnx
  if [ -e circuslinux$AB_EXEEXT ] ; then
    cp -av circuslinux$AB_EXEEXT $AD/\!CircusLnx/\!RunImage$AB_EXEEXT
  else
    cp -av circuslinux $AD/\!CircusLnx/\!RunImage$AB_EXEEXT
  fi

  cat $S/README.txt >> $AD/\!CircusLnx/\!Help

  cp -av $S/AUTHORS.txt $S/CHANGES.txt $S/FAQ.txt $S/README-SDL.txt \
  $S/COPYING.txt $AD/\!CircusLnx

  mkdir -p $AD/\!CircusLnx/data
  cp -r $S/data/images $S/data/music $S/data/sounds $AD/\!CircusLnx/data

  $AB_HOME/add-riscpkg -unixlib -unixsound -unixhome
}

export LIBS="-ljpeg -lpng -ltiff -lz -logg -lvorbis -lvorbisfile"
