AB_CATEGORY=games
AB_COPYSOURCE=yes

ab_package() {
  cp -av $H/\!CircusLnx $D
  cp -av $H/\!CircusLnx/\!* $D/\!CircusLnx
  cp -av circuslinux,ff8 $D/\!CircusLnx/\!RunImage,ff8
  cat $S/README.txt >> $D/\!CircusLnx/\!Help

  cp -av $S/AUTHORS.txt $S/CHANGES.txt $S/FAQ.txt $S/README-SDL.txt \
  $S/COPYING.txt $D/\!CircusLnx

  mkdir -p $D/\!CircusLnx/data
  cp -r $S/data/images $S/data/music $S/data/sounds $D/\!CircusLnx/data
}

export LIBS="-ljpeg -lpng -ltiff -lz -logg -lvorbis -lvorbisfile"
