
AB_URL=http://www.parallelrealities.co.uk/download/blobwars/blobwars-1.17-1.tar.gz

/usr/bin/g++ -O2 src/pak.cpp src/CFileData.cpp -o pak `sdl-config --libs` -lSDL_mixer -lSDL_image -lSDL_ttf -lSDL_net -lz
make buildpak

ab_package() {
  ab_create_app Blobwars Apps/Games
  ab_makerun $S/blobwars

  mkdir -p $A/data/
  cp -av $S/blobwars.pak $A/data

  mkdir $A/doc
  cp -av $S/doc/* $A/doc/



  $AB_HOME/add-riscpkg -unixlib
}
