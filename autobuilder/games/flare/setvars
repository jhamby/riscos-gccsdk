
AB_URL=https://github.com/downloads/clintbellanger/flare/flare_src_v014.zip
AB_PVERSION=0.14

cp $H/Makefile flare/src

cd flare/src

ab_package() {
  ab_create_app Flare Apps/Games  
  ab_makerun $S/flare
    
  cp -av ../animations ../enemies ../engine ../fonts ../images ../items ../maps ../music ../npcs  $A/
  cp -av ../powers ../quests ../soundfx ../tilesetdefs  $A/
 
  cp -av ../README ../credits.html $A/
 
  $AB_HOME/add-riscpkg -unixlib
  
}

