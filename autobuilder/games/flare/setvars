
AB_URL=http://flare-engine.googlecode.com/files/flare_src_v012.zip

cp $H/Makefile flare/src

cd flare/src

ab_package() {
  ab_create_app Flare Apps/Games  
  ab_makerun $S/flare
  
  cp -av ../enemies ../fonts ../images ../items ../maps ../music ../npcs  $A/
  cp -av ../powers ../soundfx ../tilesetdefs  $A/
 
  cp -av ../README.txt ../credits.html $A/
 
  $AB_HOME/add-riscpkg -unixlib
  
}

