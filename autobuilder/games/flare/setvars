
AB_URL=https://github.com/downloads/clintbellanger/flare/flare_linux_v015_1.tar.gz
AB_PVERSION=0.15.1

cp $H/Makefile $S

ab_package() {
  ab_create_app Flare Apps/Games  
  ab_makerun $S/flare
    
  cp -av mods $A
  cp -av tiled $A
  cp -av README COPYING  $A/
 
  $AB_HOME/add-riscpkg -unixlib -copyrightfile COPYING
  
}

