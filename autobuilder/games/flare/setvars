
AB_URL=http://flare-engine.googlecode.com/files/flare_src_v013.zip

AB_PVERSION=0.13

cp $H/Makefile flare/src

cd flare/src

ab_package() {
  ab_create_app Flare Apps/Games  
  ab_makerun $S/flare
  
  touch ../saves/save0.txt
  
  cp -av ../config ../enemies ../fonts ../images ../items ../maps ../music ../npcs  $A/
  cp -av ../powers ../quests ../saves ../soundfx ../tilesetdefs  $A/
 
  cp -av ../README.txt ../credits.html $A/
 
  $AB_HOME/add-riscpkg -unixlib
  
}

