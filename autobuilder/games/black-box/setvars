AB_CATEGORY=Games

AB_COPYSOURCE=yes

# Extra libraries needed by static build of SDL_Mixer
export LIBS="-lpng -lz -lvorbisidec -lvorbisfile"

ab_package() {
  AD=$D/Apps/Games
  mkdir -p $AD/\!Blackbox
  cp -av $H/\!Blackbox/\!* $AD/\!Blackbox
  cp -av $S/src/black-box$AB_EXEEXT $AD/\!Blackbox/blackbox$AB_EXEEXT

  cp -av $S/AUTHORS $S/ChangeLog $S/COPYING $S/README $AD/\!Blackbox

  mkdir -p $AD/\!Blackbox/data
  cp -r $S/data/gfx $S/data/sound $AD/\!Blackbox/data

  $AB_HOME/add-riscpkg -unixlib
}
