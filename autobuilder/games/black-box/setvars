# Extra libraries needed by static build of SDL_Mixer
export LIBS="-lpng -lz -lvorbisidec -lvorbisfile"

ab_package() {
  ab_create_app Blackbox Apps/Games

  cp -av $S/src/black-box$AB_EXEEXT $A/blackbox$AB_EXEEXT
  cp -av $S/AUTHORS $S/ChangeLog $S/COPYING $S/README $A/

  mkdir -p $A/data
  cp -r $S/data/gfx $S/data/sound $A/data

  $AB_HOME/add-riscpkg -unixlib
}
