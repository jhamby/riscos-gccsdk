AB_CATEGORY=Games
AB_COPYSOURCE=yes

ab_package() {
  AD=$D/Apps/Games
  mkdir -p $AD/\!PipeNight
  cp -av $H/\!PipeNight/\!* $AD/\!PipeNight
  cp -av src/pipenightdreams$AB_EXEEXT $AD/\!PipeNight/\!RunImage$AB_EXEEXT

  cp -av AUTHORS ChangeLog COPYING README \
    $AD/\!PipeNight

  mkdir -p $AD/\!PipeNight/games
  mkdir -p $AD/\!PipeNight/games/pipenightdreams
  cp -ar images $AD/\!PipeNight/games/pipenightdreams
  cp -ar levels $AD/\!PipeNight/games/pipenightdreams

  # Need to remove a shortcut or zip issues a warning
  rm $AD/\!PipeNight/games/pipenightdreams/images/pipes_space/back04/board_back.jpg
  cp $AD/\!PipeNight/games/pipenightdreams/images/pipes_space/back01/board_back.jpg $AD/\!PipeNight/games/pipenightdreams/images/pipes_space/back04/board_back.jpg

  $AB_HOME/add-riscpkg -unixlib
}

export LIBS="-lSDL_image -ljpeg -lpng -ltiff -lz"
AB_CONFLAGS=\''--datadir=/<PipeNight$$Dir>/'\'

