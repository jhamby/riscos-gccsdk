
AB_MAINTAINER="Peter Naulls <peter@chocky.org>"

AB_CATEGORY=Games
AB_DEBNAME=freeciv-client-sdl

AB_CONFLAGS="--enable-client=sdl --enable-debug=no"

export LIBS="-static -ljpeg -lpng -ltiff -lz -lvorbisidec -lSDL"

ab_package() {
  AD=$D/Apps/Games
  mkdir -p $AD
  cp -rav $H/\!CivClient $AD
  cp -rav $H/\!CivServer $AD

  cp -rav data $AD/\!CivClient
  rm $AD/\!CivClient/data/*.in
  find $AD/\!CivClient/data/ -name "Makefile*" | xargs rm

  cp AUTHORS COPYING NEWS doc/HOWTOPLAY doc/README $AD/\!CivClient/doc
  cp client/civclient$AB_EXEEXT $AD/\!CivClient
  cp server/civserver$AB_EXEEXT $AD/\!CivServer

  $AB_HOME/add-riscpkg -unixlib -unixsound -unixhome \
         -nobootvars -depends ttf-dejavu-core
}




