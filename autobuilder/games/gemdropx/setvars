AB_CATEGORY=Games
AB_COPYSOURCE=yes
AB_DISTCLEAN="make clean"

ab_package() {
  AD=$D/Apps/Games
  mkdir -p $AD
  cp -av $H/\!GemDropX $AD
  cp -av $H/\!GemDropX/\!* $AD/\!GemDropX
  cp -av gemdropx,ff8 $AD/\!GemDropX/\!RunImage,ff8
  cat README.txt $H/RISCOSNotes >$AD/\!GemDropX/\!Help

  cp -av AUTHORS.txt CHANGES.txt COPYING.txt ICON.txt \
    $AD/\!GemDropX

  mkdir -p $AD/\!GemDropX/data
  cp -r data/images $AD/\!GemDropX/data
  cp -r data/sounds $AD/\!GemDropX/data

  $AB_HOME/add-riscpkg -unixhome -unixsound
}
