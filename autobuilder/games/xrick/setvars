AB_URL=http://www.bigorno.net/xrick/xrick-021212.tgz
AB_CATEGORY=Games

AB_COPYSOURCE=yes
AB_DISTCLEAN="$AB_MAKE clean"

ab_package() {

  AD=$D/Apps/Games 
  mkdir -p $AD/\!XRick
  cp $H/\!XRick/\!* $AD/\!XRick
  cp xrick$AB_EXTEXT $AD/\!XRick/\!RunImage$AB_EXEEXT
  # Copy zip file as data to stop it being used as an image file system
  cp data.zip $AD/\!XRick/data.zip,ffd
  cat README $H/RISCOSNotes > $AD/\!XRick/\!Help

  $AB_HOME/add-riscpkg -unixlib -unixsound
}



