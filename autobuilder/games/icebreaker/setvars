AB_DISTCLEAN="$AB_MAKE clean"

AB_PRECONF=:

ab_package() {
  ab_create_app IceBreaker Apps/Games

  cp -av icebreaker $A/
  cat $S/README >> $A/\!Help

  cp -av $S/ChangeLog $S/LICENSE $S/TODO $S/README $A/

  mkdir -p $A/data
  cp -r $S/*.wav $S/*.bmp $A/data

  $AB_HOME/add-riscpkg -unixhome -unixlib
}
