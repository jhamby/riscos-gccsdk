
AB_CATEGORY=games
AB_COPYSOURCE=yes
AB_DISTCLEAN="make clean"

ab_package() {
  cp -av $H/\!AirStrike $D
  rm -rf $D/\!AirStrike/.svn
  cp -av $S/ChangeLog $S/COPYING $S/LICENSE $S/README $D/\!AirStrike
  cp -av $S/src/airstrike$AB_EXEEXT $S/data $D/\!AirStrike
  sed s#datapath.*\$#"datapath \"<AirStrike\$Dir>/data/\""# < $S/airstrikerc > $D/\!AirStrike/airstrikerc
}

