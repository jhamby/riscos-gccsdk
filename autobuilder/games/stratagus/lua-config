#!/bin/sh
# Simple shell script to force configure to use lua50
# for RISC OS cross compiles

usage="\
Usage: lua-config [--cflags] [--libs]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do

  case $1 in
    --cflags|--include)
      echo -I/home/riscos/env/include/lua50 

      ;;
    --libs|--static-libs)
      echo -llua50 -llualib50
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
