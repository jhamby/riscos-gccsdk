
AB_SVN=https://svn.code.sf.net/p/uhexen2/code/trunk
AB_PVERSION=1.5.8-svn-$(date +%Y%m%d)

cd engine/hexen2

AB_MAKE="$AB_MAKE h2"

ab_package () {

  ab_create_app Hexen2 Apps/Games
  ab_makerun $S/hexen2 hexen2

  cp -av $S/../../docs $A

  $AB_HOME/add-riscpkg -unixlib -copyrightfile ../../docs/COPYING
}
