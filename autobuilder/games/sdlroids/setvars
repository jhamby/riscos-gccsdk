AB_URL=http://surfnet.dl.sourceforge.net/sourceforge/sdlroids/sdlroids-1.3.4.tar.gz
AB_CATEGORY=Games
AB_COPYSOURCE=yes

ab_package() {

  AD=$D/Apps/Games
  mkdir -p $AD/\!SDLRoids
  cp -av $H/\!SDLRoids/\!* $AD/\!SDLRoids
  cp -av sdlroids,ff8 $AD/\!SDLRoids
  mkdir -p $AD/\!SDLRoids/data
  mkdir -p $AD/\!SDLRoids/data/sdlroids
  cp -r bmp $AD/\!SDLRoids/data/sdlroids
  cp -r sounds $AD/\!SDLRoids/data/sdlroids
  cp -av ChangeLog COPYING README $AD/\!SDLRoids

  $AB_HOME/add-riscpkg -unixlib -unixsound \
     -copyrightfile $S/COPYING
}

export LIBS="-lvorbisidec"
AB_CONFLAGS=\''--datadir=/\<SDLRoids\$$Dir\>/data'\'
