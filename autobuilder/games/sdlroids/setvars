AB_URL=http://surfnet.dl.sourceforge.net/sourceforge/sdlroids/sdlroids-1.3.4.tar.gz
AB_CATEGORY=games
AB_COPYSOURCE=yes

ab_package() {

  mkdir -p $D/\!SDLRoids
  cp -av $H/\!SDLRoids/\!* $D/\!SDLRoids
  cp -av sdlroids,ff8 $D/\!SDLRoids
  mkdir -p $D/\!SDLRoids/data
  mkdir -p $D/\!SDLRoids/data/sdlroids
  cp -r bmp $D/\!SDLRoids/data/sdlroids
  cp -r sounds $D/\!SDLRoids/data/sdlroids
  cp -av ChangeLog COPYING README $D/\!SDLRoids
}

export LIBS="-logg -lvorbis -lvorbisfile"
AB_CONFLAGS=\''--datadir=/\<SDLRoids\$$Dir\>/data'\'
