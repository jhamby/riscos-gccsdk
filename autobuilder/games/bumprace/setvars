AB_CATEGORY=Games
AB_COPYSOURCE=yes

ab_package() {
  AD=$D/Apps/Games
  mkdir -p $AD
  cp -av $H/\!BumpRace $AD
  cp -av $H/\!BumpRace/\!* $AD/\!BumpRace
  cp -av src/bumprace,ff8 $AD/\!BumpRace/\!RunImage,ff8

  cp -av AUTHORS $ChangeLog COPYING FAQ README \
    $AD/\!BumpRace

  mkdir -p $AD/\!BumpRace/data
  mkdir -p $AD/\!BumpRace/data/bumprace
  cp -r data/gfx $AD/\!BumpRace/data/bumprace
  cp -r data/sound $AD/\!BumpRace/data/bumprace

  $AB_HOME/add-riscpkg -unixlib -unixsound -unixhome
}

export LIBS="-ljpeg -lpng -ltiff -lz  -lvorbisidec -lintl"
AB_CONFLAGS=\''--datadir=/\<BumpRace\$$Dir\>/data'\'

