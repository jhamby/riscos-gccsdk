
AB_URL=http://www.parallelrealities.co.uk/download/edgar/edgar-0.60-1.tar.gz

/usr/bin/gcc -O2 src/pak_creator.c -o pak -lz
touch pak_creator.o
make buildpak

ab_package() {
  ab_create_app Edgar Apps/Games
  ab_makerun $S/edgar

  mkdir -p $A/data/
  cp -av $S/edgar.pak $A/data

  mkdir $A/doc
  cp -av $S/doc/* $A/doc/

  $AB_HOME/add-riscpkg -unixlib  
}
