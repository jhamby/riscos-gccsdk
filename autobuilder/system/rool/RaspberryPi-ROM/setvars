AB_COMPILEFAIL=yes

# Run "make install" (in fact: make $AB_INSTALLTARGET) after build
AB_INSTALL=no

# RISC OS configuration script
AB_CONFIG=

# RISC OS make wrapper.  This can be set to just "make" if setting the
