# Project: SysLog Daemon
# Written by John Tytgat / BASS

# Toolflags :
CCflags = -c -zM -depend !Depend -IC: -ITCPIPLibs: -throwback -APCS 3/32bit/fpe3 -Wp
Linkflags = -rmf -c++ -o $@
CC = cc

All:	SysLogD

# System libraries :
#  - "o.syslog32" comes from !SysLog distribution
#  - "o.inetlibzm" & "o.socklibzm" comes from Acorn's SocketLib distribution
LDLIBS = o.syslog32 TCPIPLibs:o.inetlibzm TCPIPLibs:o.socklibzm TCPIPLibs:o.unixlibzm c:o.Stubs

# SysLogD objects
SYSLOGDOBJS = o.modheader o.main

# Final targets:
SysLogD:	$(SYSLOGDOBJS) $(LDLIBS) $(USRLIBS)
        link $(linkflags) $(SYSLOGDOBJS) $(LDLIBS) $(USRLIBS)

.SUFFIXES: .o .c
.c.o:;  	$(CC) $(CCflags) -o $@ $<

# Static dependencies:
main.o: modheader.h
modheader.h modheader.o:
	cmhg modheader.cmhg modheader.o -d modheader.h

# Dynamic dependencies:
