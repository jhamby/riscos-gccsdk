#!/bin/sh
# Convert includes in assembler files
case ${1} in
 -path) conv="s!clib/unixlib/asm_dec.s!UnixHdr:unixlib.s.asm_dec!" 
  ;;
 -nopath) conv="s!UnixHdr:unixlib.s.asm_dec!clib/unixlib/asm_dec.s!" 
  ;;
 *) echo "includes [-path|-nopath]"
    exit 1
;;
esac

for file in `find ../source -type f -name "*.s"`
do
  sed ${file} -e "${conv}" > ${file}.tmp
  mv ${file}.tmp ${file}
done
